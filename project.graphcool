type User @model {
  id: ID! @isUnique
  createdAt: DateTime!
  updatedAt: DateTime!
  email: String @isUnique
  password: String
  firstName: String
  lastName: String
  birthYear: String
  phone: String
  opportunities: [Opportunity!]! @relation(name: "UserOpportunities")
  persons: [Person!]! @relation(name: "UsersPersons")
  interestedOpportunities: [Opportunity!]! @relation(name: "InterestedOpportunities")
}

type File @model {
  contentType: String!
  createdAt: DateTime!
  id: ID! @isUnique
  name: String!
  secret: String! @isUnique
  size: Int!
  updatedAt: DateTime!
  url: String! @isUnique
}

type Opportunity @model {
  id: ID! @isUnique
  createdAt: DateTime!
  updatedAt: DateTime!
  ownedBy: User @relation(name: "UserOpportunities")
  name: String
  description: String
  startTime: DateTime
  endTime: DateTime
  address: String
  interestedUsers: [User!]! @relation(name: "InterestedOpportunities")
}

type Person @model {
  createdAt: DateTime!
  displayName: String
  email: String
  firstName: String
  id: ID! @isUnique
  lastName: String
  ownedBy: User @relation(name: "UsersPersons")
  phone1: String
  phone2: String
  phoneTag1: String
  phoneTag2: String
  updatedAt: DateTime!
}